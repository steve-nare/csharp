    public partial class Form4 : Form
    {
        public Form4()
        {
            InitializeComponent();
            BenchType.Items.AddRange(new string[] { "PC12", "PC21", "C27-J" });
            StartButton.Click += StartButton_Click;
        }

        private void pictureBox1_Click(object sender, EventArgs e)
        {

        }

        private void StartButton_Click(object sender, EventArgs e)
        {
            if (BenchType.SelectedItem != null && Application.OpenForms["Form1"] == null)
            {
                string selectedBenchType = BenchType.SelectedItem.ToString() ?? "Default";
                Form1 form1 = new Form1(selectedBenchType);
                form1.FormClosed += Form1_FormClosed;
                form1.Show();
            }
            else if (BenchType.SelectedItem == null)
            {
                MessageBox.Show("Please select an item from the ComboBox.", "Selection Required", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            /*
            if (BenchType.SelectedItem == null)
            {
                MessageBox.Show("Please select an item from the ComboBox.", "Selection Required", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            string selectedValue = BenchType.SelectedItem.ToString() ?? "Default";
            Form1 form1 = new Form1(selectedValue);
            form1.Show();*/
        }

        private void Form1_FormClosed(object sender, FormClosedEventArgs e)
        {
            this.Show();
        }

        private void label4_Click(object sender, EventArgs e)
        {

        }

        private void QuitButton_Click(object sender, EventArgs e)
        {
            Application.Exit();
        }
    }
}
